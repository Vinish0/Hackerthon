async function breweri(){
  try {
      let breweriData = await fetch("https://api.openbrewerydb.org/breweries")
      let arrOfBreweri = await breweriData.json()
      console.log(arrOfBreweri);

      let divContainer = document.createElement("div")
      divContainer.className = "container"
      document.body.appendChild(divContainer)

      arrOfBreweri.forEach( data => {

        let divData = document.createElement("div")
        divData.className = "divData"

        let table = document.createElement("table")
        table.className = "tableBox"

        
        let nameTr = document.createElement("tr")
        
        let nameTh = document.createElement("th")
        nameTr.className = "company"
        nameTh.colSpan = "2"
        nameTh.innerText = data.name
        nameTr.append(nameTh)
        
        
        let typeTr = document.createElement("tr")
        let typeTh = document.createElement("th")
        let typeTd = document.createElement("td")

       
        typeTh.innerText = "Company Type"

        typeTd.innerText = data.brewery_type
        typeTr.append(typeTh, typeTd)
        

        let address2Tr = document.createElement("tr")
        let address2Th = document.createElement("th")
        let address2Td = document.createElement("td")

        
        address2Th.innerText = "Address_1"

        address2Td.innerText = data.address_2
        address2Tr.append(address2Th, address2Td)

        let address3Tr = document.createElement("tr")
        let address3Th = document.createElement("th")
        let address3Td = document.createElement("td")


        address3Th.innerText = "Address_2"

        address3Td.innerText = data.address_3
        address3Tr.append(address3Th, address3Td)

        let websiteTr = document.createElement("tr")
        let websiteTh = document.createElement("th")
        let websiteTd = document.createElement("td")

        websiteTh.innerText = "website"

        websiteTd.innerHTML = `<a href = 'S${data.website_url}'>${data.website_url}</a>`
        websiteTr.append(websiteTh, websiteTd)

      
        let phoneNoTr = document.createElement("tr")
        let phoneNoTh = document.createElement("th")
        let phoneNoTd = document.createElement("td")
    
        phoneNoTh.innerText = "phone"

        phoneNoTd.innerHTML = data.phone
        phoneNoTr.append(phoneNoTh, phoneNoTd)




        table.append(nameTr, typeTr, address2Tr, address3Tr, websiteTr, phoneNoTr)

        divData.append(table)


        divContainer.append(divData)

      });
      

      
  } catch (err) {
    alert("Error accured")
    console.log(error);
  }
}

breweri()

